<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | MyWebsite</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.12.3/lottie.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/zxcvbn@4.4.2/dist/zxcvbn.js"></script>
  <style>
    /* Animated Gradient Background */
    body, html {
      height: 100%;
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(-45deg, #667eea, #764ba2, #ff6a00, #f7971e);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    @keyframes gradientBG {
      0% {background-position: 0% 50%;}
      50% {background-position: 100% 50%;}
      100% {background-position: 0% 50%;}
    }

    /* Floating Card Animation */
    @keyframes floatCard {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    /* Glassmorphism Card */
    .login-card {
      display: flex;
      width: 900px;
      max-width: 95%;
      border-radius: 20px;
      overflow: hidden;
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255,255,255,0.3);
      box-shadow: 0 20px 50px rgba(0,0,0,0.3);
      animation: floatCard 6s ease-in-out infinite;
    }

    /* Left illustration */
    .login-image {
      flex: 1;
      background: rgba(255,255,255,0.05);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Login form */
    .login-form {
      flex: 1;
      padding: 50px 40px;
      position: relative;
      color: #fff;
    }

    .login-form h2 {
      font-weight: 700;
      margin-bottom: 25px;
      text-align: center;
      color: #fff;
    }

    /* Floating label input with icon */
    .form-floating-icon {
      position: relative;
      margin-bottom: 20px;
    }

    .form-floating-icon input {
      width: 100%;
      padding: 15px 50px 15px 20px;
      border-radius: 50px;
      border: 1px solid rgba(255,255,255,0.6);
      background: rgba(255,255,255,0.1);
      color: #fff;
      transition: border 0.3s ease, box-shadow 0.3s ease;
    }

    .form-floating-icon input:focus {
      border-color: #fff;
      box-shadow: 0 0 10px rgba(255,255,255,0.5);
      outline: none;
    }

    .form-floating-icon i {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translateY(-50%);
      color: #fff;
      font-size: 1.2rem;
      cursor: pointer;
    }

    /* Password strength bar */
    .strength-bar {
      height: 5px;
      border-radius: 5px;
      background: rgba(255,255,255,0.3);
      margin-top: 5px;
    }

    .strength-bar-fill {
      height: 100%;
      width: 0%;
      border-radius: 5px;
      transition: 0.3s;
    }

    /* Login button */
    .btn-primary {
      width: 100%;
      padding: 12px;
      border-radius: 50px;
      font-weight: 600;
      background: linear-gradient(45deg, #667eea, #764ba2, #ff6a00);
      background-size: 200% 200%;
      border: none;
      color: #fff;
      transition: 0.5s;
      margin-bottom: 10px;
    }

    .btn-primary:hover {
      animation: gradientHover 3s ease infinite;
    }

    @keyframes gradientHover {
      0% {background-position: 0% 50%;}
      50% {background-position: 100% 50%;}
      100% {background-position: 0% 50%;}
    }

    /* Social login buttons */
    .social-login {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 15px;
      margin-bottom: 20px;
    }

    .social-btn {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 10px 15px;
      border-radius: 50px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
      color: #fff;
    }

    .social-btn:hover {transform: scale(1.05);}
    .google {background: #db4437;}
    .facebook {background: #4267B2;}
    .github {background: #333;}

    /* Remember Me & Forgot Password */
    .form-extra {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.9rem;
      margin-bottom: 20px;
    }

    .form-extra input[type="checkbox"] {
      margin-right: 5px;
    }

    .login-footer {
      font-size: 0.9rem;
      text-align: center;
      color: #fff;
    }

    .login-footer a {
      color: #fff;
      text-decoration: none;
      font-weight: 500;
    }

    .login-footer a:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .login-card {
        flex-direction: column;
      }
      .login-image {
        height: 250px;
      }
    }
  </style>
</head>
<body>

  <div class="login-card">
    <!-- Left Lottie Illustration -->
    <div class="login-image">
      <div id="lottie-animation" style="width: 80%; height: 80%;"></div>
    </div>

    <!-- Login Form -->
    <div class="login-form">
      <h2>Welcome Back!</h2>
      <form id="loginForm" action="/login" method="POST">
        <div class="form-floating-icon">
          <input type="email" name="email" placeholder="Email Address" required>
          <i class="bi bi-envelope-fill"></i>
        </div>
        <div class="form-floating-icon">
          <input type="password" id="password" name="password" placeholder="Password" required>
          <i class="bi bi-eye-fill" id="togglePassword"></i>
          <div class="strength-bar"><div class="strength-bar-fill" id="strengthBar"></div></div>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="form-extra">
          <label><input type="checkbox" name="remember"> Remember Me</label>
          <a href="/forgot-password">Forgot Password?</a>
        </div>

        <button type="submit" class="btn btn-primary" id="loginBtn">
          Login
        </button>
      </form>

      <!-- Social login buttons -->
      <div class="social-login">
        <div class="social-btn google"><i class="bi bi-google me-2"></i>Google</div>
        <div class="social-btn facebook"><i class="bi bi-facebook me-2"></i>Facebook</div>
        <div class="social-btn github"><i class="bi bi-github me-2"></i>GitHub</div>
      </div>

      <div class="login-footer">
        <p>Don't have an account? <a href="/register">Register here</a></p>
      </div>
    </div>
  </div>

  <script>
    // Lottie Animation
    const animation = lottie.loadAnimation({
      container: document.getElementById('lottie-animation'),
      renderer: 'svg',
      loop: true,
      autoplay: true,
      path: 'https://assets3.lottiefiles.com/packages/lf20_jcikwtux.json'
    });

    // Show/hide password
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('password');
    togglePassword.addEventListener('click', () => {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      togglePassword.classList.toggle('bi-eye-slash-fill');
    });

    // Password Strength
    const strengthBar = document.getElementById('strengthBar');
    password.addEventListener('input', () => {
      const val = password.value;
      const result = zxcvbn(val);
      const score = result.score;
      const colors = ['#ff4d4f','#ff7a45','#ffec3d','#73d13d','#52c41a'];
      const widths = ['20%','40%','60%','80%','100%'];
      strengthBar.style.background = colors[score];
      strengthBar.style.width = widths[score];
    });
  </script>

</body>
</html>
