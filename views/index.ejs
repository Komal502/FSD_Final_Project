<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-Shop | Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Navbar */
    .navbar-brand { font-weight: 700; font-size: 1.6rem; color: #0d6efd; }
    .nav-link { font-weight: 500; margin-left: 0.5rem; font-size: 0.9rem; }
    .search-input { border-radius: 50px; font-size: 0.9rem; }
/* Enhanced Hero Section */
.hero {
  position: relative;
  height: 250px;
  border-radius: 16px;
  overflow: hidden;
  background: linear-gradient(120deg, #0d6efd, #6610f2, #6f42c1);
  background-size: 300% 300%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #fff;
  margin-bottom: 30px;
  animation: gradientFlow 6s ease infinite;
  box-shadow: 0 8px 20px rgba(0,0,0,0.15);
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.hero::before {
  content: "";
  position: absolute;
  inset: 0;
  background: url('https://source.unsplash.com/1600x400/?shopping,store,ecommerce') center/cover no-repeat;
  opacity: 0.2;
}

.hero-content {
  position: relative;
  z-index: 2;
  animation: fadeIn 1.2s ease forwards;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(15px); }
  to { opacity: 1; transform: translateY(0); }
}

.animate-title {
  font-size: 2.1rem;
  font-weight: 800;
  letter-spacing: 1px;
  text-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
  animation: slideInDown 1.3s ease;
}

@keyframes slideInDown {
  0% { opacity: 0; transform: translateY(-40px); }
  100% { opacity: 1; transform: translateY(0); }
}

.animate-subtitle {
  font-size: 1rem;
  font-weight: 400;
  margin-top: 8px;
  color: #f8f9fa;
  opacity: 0;
  animation: fadeUp 1.5s ease forwards;
  animation-delay: 0.5s;
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.highlight {
  color: #ffea00;
  text-shadow: 0 2px 10px rgba(255, 255, 0, 0.4);
}

.hero-btn {
  background-color: #ffffff;
  color: #0d6efd;
  border-radius: 50px;
  padding: 8px 20px;
  font-weight: 600;
  font-size: 0.95rem;
  transition: all 0.3s ease;
  opacity: 0;
  animation: fadeUp 1.5s ease forwards;
  animation-delay: 1s;
}

.hero-btn:hover {
  background-color: #ffea00;
  color: #212529;
  transform: scale(1.07);
  box-shadow: 0 5px 20px rgba(255, 255, 0, 0.4);
}


    /* Categories Section - Enhanced Animated Style */
.categories {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 12px;
  margin-bottom: 30px;
  margin-top: 10px;
}

.categories button {
  border-radius: 50px;
  border: none;
  padding: 8px 20px;
  font-size: 0.9rem;
  background: linear-gradient(135deg, #e9ecef, #f8f9fa);
  color: #343a40;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.4s ease;
  display: flex;
  align-items: center;
  gap: 8px;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.categories button i {
  font-size: 1rem;
  transition: transform 0.3s ease;
}

/* Hover Effects */
.categories button:hover {
  background: linear-gradient(90deg, #0d6efd, #6610f2);
  color: #fff;
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(13, 110, 253, 0.4);
}

.categories button:hover i {
  transform: rotate(10deg) scale(1.2);
}

/* Glowing Border Animation on Hover */
.categories button::before {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 50px;
  padding: 2px;
  background: linear-gradient(90deg, #0d6efd, #6610f2, #6f42c1, #ffea00);
  background-size: 300% 300%;
  -webkit-mask: 
    linear-gradient(#fff 0 0) content-box, 
    linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 0;
  transition: opacity 0.5s ease, background-position 2s ease;
}

.categories button:hover::before {
  opacity: 1;
  animation: borderFlow 3s linear infinite;
}

@keyframes borderFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* Active Button Effect */
.categories button.active {
  background: linear-gradient(90deg, #0d6efd, #6610f2);
  color: #fff;
  box-shadow: 0 6px 20px rgba(13, 110, 253, 0.5);
  transform: scale(1.05);
}


    /* Product Card */
    .card {
      border-radius: 16px;
      overflow: hidden;
      position: relative;
      margin-bottom: 20px;
      background: #fff;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      opacity: 0;
      transform: translateY(20px);
    }
    .card.visible { opacity: 1; transform: translateY(0); }
    .card:hover {
      transform: translateY(-6px) scale(1.02);
      box-shadow: 0 15px 25px rgba(0,0,0,0.18);
    }

    .card-img-container {
      position: relative;
      height: 160px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: #fefefe;
    }
    .card-img-top { height: 100%; width: auto; object-fit: contain; transition: transform 0.4s ease; }
    .card:hover .card-img-top { transform: scale(1.12); }

    /* Overlay */
    .overlay {
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.65);
      color: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      opacity: 0;
      transition: opacity 0.3s ease, transform 0.3s ease;
      padding: 8px;
      text-align: center;
      transform: translateY(10px);
    }
    .card:hover .overlay { opacity: 1; transform: translateY(0); }
    .overlay h6 { font-size: 0.95rem; margin-bottom: 4px; font-weight: 600; }
    .overlay p { font-size: 0.85rem; margin-bottom: 6px; font-weight: 500; }
    .overlay .btn { font-size: 0.75rem; padding: 4px 8px; transition: transform 0.2s ease; }
    .overlay .btn:hover { transform: scale(1.1); }

    /* Star rating */
    .stars { color: #ffc107; font-size: 0.8rem; margin-bottom: 5px; }

    /* Card body */
    .card-body { display: flex; flex-direction: column; justify-content: space-between; padding: 10px; }
    .card-title { font-weight: 600; color: #343a40; font-size: 0.95rem; margin-bottom: 4px; }
    .price { font-size: 1rem; font-weight: 700; color: #43a047; margin-bottom: 6px; }
    .btn-view { border-radius: 8px; font-weight: 500; font-size: 0.85rem; padding: 5px 10px; transition: transform 0.2s ease, background-color 0.2s ease; }
    .btn-view:hover { transform: scale(1.05); background-color: #357a38; }

    /* Badges */
    .badge-new { position: absolute; top: 10px; left: 10px; background-color: #0d6efd; color: #fff; font-size: 0.7rem; padding: 3px 5px; border-radius: 4px; }
    .badge-sale { position: absolute; top: 10px; right: 10px; background-color: #dc3545; color: #fff; font-size: 0.7rem; padding: 3px 5px; border-radius: 4px; }

    /* No products */
    .no-products { text-align: center; padding: 50px 0; color: #6c757d; }
  </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand" href="/">E-Shop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <form class="d-flex ms-auto me-3" method="GET" action="/">
        <input class="form-control me-2 search-input" type="search" placeholder="Search products..." name="search">
        <button class="btn btn-success" type="submit"><i class="bi bi-search"></i></button>
      </form>
      <ul class="navbar-nav">
        <% if(user){ %>
          <li class="nav-item"><a class="nav-link" href="/cart"><i class="bi bi-cart3"></i> Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/orders"><i class="bi bi-receipt"></i> Orders</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register"><i class="bi bi-person-plus"></i> Register</a></li>
        <% } %>
        <li class="nav-item"><a class="nav-link" href="/admin"><i class="bi bi-speedometer2"></i> Admin</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Banner -->
<div class="container">
  <section class="hero">
    <div class="hero-content">
      <h1 class="animate-title">Welcome to <span class="highlight">E-Shop</span></h1>
      <p class="animate-subtitle">Your one-stop destination for amazing products and unbeatable prices!</p>
      <a href="#products" class="btn btn-light btn-lg mt-3 hero-btn">Start Shopping <i class="bi bi-arrow-right-circle ms-2"></i></a>
    </div>
  </section>
</div>


<!-- Categories with icons -->
<div class="categories container">
  <button data-category="all"><i class="bi bi-grid-3x3-gap-fill"></i> All</button>
  <button data-category="electronics"><i class="bi bi-tv"></i> Electronics</button>
  <button data-category="fashion"><i class="bi bi-bag-fill"></i> Fashion</button>
  <button data-category="home"><i class="bi bi-house-fill"></i> Home</button>
  <button data-category="books"><i class="bi bi-book-fill"></i> Books</button>
  <button data-category="sports"><i class="bi bi-basket2-fill"></i> Sports</button>
</div>

<!-- Products Grid -->
<div class="container mt-4" id="products">
  <% if(products.length === 0){ %>
    <div class="no-products">
      <i class="bi bi-bag-x" style="font-size:70px;"></i>
      <h4 class="mt-3">No products found</h4>
      <p>Check back later or use the search above.</p>
    </div>
  <% } %>

  <div class="row g-3">
    <% products.forEach(product => { %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12" data-category="<%= product.category.toLowerCase() %>">
        <div class="card fade-card">
          <% if(product.isNew){ %><span class="badge-new">New</span><% } %>
          <% if(product.onSale){ %><span class="badge-sale">Sale</span><% } %>

          <div class="card-img-container">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="overlay">
              <h6><%= product.name %></h6>
              <p>₹<%= product.price.toFixed(2) %></p>
              <div class="stars">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i>
                <i class="bi bi-star"></i>
              </div>
              <a href="/cart/add/<%= product._id %>" class="btn btn-sm btn-success">Quick Add</a>
            </div>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="price">₹<%= product.price.toFixed(2) %></p>
            <a href="/product/<%= product._id %>" class="btn btn-primary mt-auto btn-view"><i class="bi bi-eye"></i> View</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Fade-in animation
  const cards = document.querySelectorAll('.fade-card');
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if(entry.isIntersecting){
        entry.target.classList.add('visible');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.1 });
  cards.forEach(card => observer.observe(card));

  // Category filter
  const categoryButtons = document.querySelectorAll('.categories button');
  const productCards = document.querySelectorAll('.row .col-xl-3, .row .col-lg-4, .row .col-md-6, .row .col-sm-12');
  categoryButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.dataset.category;
      productCards.forEach(card => {
        if(category === 'all' || card.dataset.category === category){
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>
</body>
</html>
